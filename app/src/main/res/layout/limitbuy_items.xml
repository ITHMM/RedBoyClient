<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5.0dip"
    android:paddingTop="5.0dip"
    android:background="#ccc"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/limitbuy_to_goodsdetail">
    <RelativeLayout
        android:id="@+id/limitbuyrelImage"
        android:layout_width="82.0dip"
        android:layout_height="82.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10.0dip" >

        <ImageView
            android:id="@+id/limitbuyPicIv"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginTop="1.0dip"
            android:src="@drawable/product_loading" />

        <ImageView
            android:id="@+id/limitbuyloadingIv"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginTop="1.0dip"
            android:src="@drawable/product_loading"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_80" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/limitbuy_nameTV"
            android:layout_width="wrap_content"
            style="@style/style_15_666666_BOLD"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="帮一惊顺理夼"
             />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/limitbuy_priceTV"
                android:layout_width="160dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:text="Y100.00"
                style="@style/style_15_666666_BOLD" />
		<ImageView
                android:layout_width="160dip"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:src="@drawable/limit_line" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:text="限时特价:"
                style="@style/style_15_666666_BOLD" />

            <TextView
                android:id="@+id/limitpriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="5dip"
                android:text="Y88.00"
                 android:textColor="@color/red"
                    android:textSize="16sp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="剩余时间:"
                    android:textColor="@color/red"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/limitlefttimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="72:33:40"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1" >


                <TextView
                    android:id="@+id/tv_limitbuy"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/product_detail_shop_selecter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dip"
                    android:layout_marginTop="0dip"
                    android:text="加入购物车"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>