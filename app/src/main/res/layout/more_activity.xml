<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sl_ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200.0dip"
                    android:background="@drawable/background"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp">

                        <ImageButton
                            android:id="@+id/bt_exit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/close" />
                    </RelativeLayout>
                    <!--账户信息-->
                    <LinearLayout
                        android:id="@+id/ll_userinfo"
                        android:layout_width="fill_parent"
                        android:layout_height="200.0dip"
                        android:orientation="vertical"
                        android:paddingLeft="50dp"
                        android:paddingTop="0dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/line" />

                        <LinearLayout
                            android:id="@+id/my_info"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="50.0dip"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/my_name_lin"
                                android:layout_width="fill_parent"
                                android:layout_height="40.0dip"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/style_17_808183_BOLD"
                                    android:layout_width="80.0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="10.0dip"
                                    android:gravity="left|center"
                                    android:text="@string/login_name" />

                                <TextView
                                    android:id="@+id/my_name_text"
                                    style="@style/style_14_C21513_BOLD"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="30.0dip"
                                    android:gravity="left|center" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_bonus_lin"
                                android:layout_width="fill_parent"
                                android:layout_height="40.0dip"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/style_17_808183_BOLD"
                                    android:layout_width="80.0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="10.0dip"
                                    android:gravity="left|center"
                                    android:text="积分" />

                                <TextView
                                    android:id="@+id/my_bonus_text"
                                    style="@style/style_14_C21513_BOLD"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="30.0dip"
                                    android:gravity="left|center" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_level_lin"
                                android:layout_width="fill_parent"
                                android:layout_height="40.0dip"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/style_17_808183_BOLD"
                                    android:layout_width="80.0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="10.0dip"
                                    android:gravity="left|center"
                                    android:text="等级" />

                                <TextView
                                    android:id="@+id/my_level_text"
                                    style="@style/style_14_C21513_BOLD"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="30.0dip"
                                    android:gravity="left|center"
                                    android:text="" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                    <!--登录 -->
                    <LinearLayout
                        android:id="@+id/myFragment_notLoginLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="-10dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="80.0dip"
                            android:layout_height="80.0dip"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/head_portrait"
                            android:gravity="center"
                            android:textSize="15dp" />


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="20sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <TextView
                                android:id="@+id/login_text"
                                style="@style/style_17_FFFFFF_BOLD"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/login_pwd_layout"
                                android:layout_gravity="center"
                                android:background="@anim/button_long"
                                android:gravity="center"
                                android:text="登录" />

                            <TextView
                                android:id="@+id/register_text"
                                style="@style/style_17_FFFFFF_BOLD"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/login_text"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:background="@anim/button_long"
                                android:gravity="center"
                                android:text="注册" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <!--分隔线-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="5dip"
                    android:background="@color/white_text" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/my_order_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@anim/shape_rounded_selectable"
                android:gravity="center_vertical"
                android:padding="10.0dip">

                <TextView
                    android:id="@+id/my_ordr_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/my_ordr_title"
                    android:textColor="@color/blackcolor"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/address_manage_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@anim/shape_rounded_selectable"
                android:gravity="center_vertical"
                android:padding="10.0dip">

                <TextView
                    android:id="@+id/address_manage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/address_manage_title"
                    android:textColor="@color/blackcolor"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_favorite_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@anim/shape_rounded_selectable"
                android:gravity="center_vertical"
                android:padding="10.0dip">

                <TextView
                    android:id="@+id/my_favorite_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/my_favorite_title"
                    android:textColor="@color/blackcolor"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/helpRelLay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@anim/shape_rounded_selectable"
                android:gravity="center_vertical"
                android:padding="10.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/help_title"
                    android:textColor="@color/blackcolor"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/aboutRelLay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@anim/shape_rounded_selectable"
                android:gravity="center_vertical"
                android:padding="10.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/about_title"
                    android:textColor="@color/blackcolor"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/arrow" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>