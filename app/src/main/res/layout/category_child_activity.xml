<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/rl_category_fragment_sec"
    android:background="@drawable/home_backgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/relTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/head_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/secTitleBack"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@anim/head_back"
            android:gravity="center"
            android:text="返 回" />

        <TextView
            android:id="@+id/categorySecTitle"
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="二级分类" />
    </RelativeLayout>

    <ListView
        android:id="@+id/categorySecList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/relTop"
        android:cacheColorHint="#00000000"
        android:listSelector="@anim/index_item_bg" />
<!--

    <include
        android:id="@id/bottomBar"
        layout="@layout/bottombar" />
-->

</RelativeLayout>